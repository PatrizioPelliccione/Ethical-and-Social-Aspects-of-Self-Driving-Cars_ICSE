@article{10.1371/journal.pone.0168054,
    author = {Dixit, Vinayak V. AND Chand, Sai AND Nair, Divya J.},
    journal = {PLOS ONE},
    publisher = {Public Library of Science},
    title = {Autonomous Vehicles: Disengagements, Accidents and Reaction Times},
    year = {2016},
